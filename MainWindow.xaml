<Window x:Class="Contractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contractor"
        mc:Ignorable="d"
        Title="MainWindow" Height="446" Width="809">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            
        </Grid>
        <Grid Grid.Column="0">
            <StackPanel>
                <Label Content="Contractor" FontWeight="Bold" FontSize="20" Padding="15,5,5,15"   />
                <ComboBox x:Name="contractorFilterBox"  Width="75" HorizontalAlignment="Right" Margin="0,0,75,0" SelectionChanged="ContractorFilter_SelectionChanged">
                    <ComboBoxItem Content="All" />
                    <ComboBoxItem Content="Unassigned" />
                </ComboBox>
                <ListBox x:Name="contractorlist" Height="200" Width="300"></ListBox>
                <WrapPanel HorizontalAlignment="Left" >
                    <Button Click="Display_Contractor" Content="Add" Height="30" Width="75" Margin="50,0,0,0" ></Button>
                    <Button Click="Remove_Contractor"  Content="Remove" Height="30" Width="75"></Button>
                    <Button Content="Edit" Height="30" Width="75" Margin="75,0,0,0" IsEnabled="False"></Button>
                </WrapPanel>
            </StackPanel>
            
        </Grid>
        <WrapPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center">
            <Button Content="Assign" Height="30" Width="75" Click="Assign_Click" />
        </WrapPanel>
        <Grid Grid.Column="1">

            <StackPanel>
                <Label Content="Job" FontWeight="Bold" FontSize="20" Padding="15,5,5,15"   />
                <WrapPanel HorizontalAlignment="Center">
                    <Slider x:Name="jobCostSlider" Width="100" ValueChanged="JobCostSlider_ValueChanged"  IsSnapToTickEnabled="True" Maximum="1000" />
                    <Label x:Name="jobCostLabel" Content="Max Cost: 0" MaxWidth="130" MinWidth="130"  />
                    <ComboBox x:Name="jobFilterBox" Width="75" SelectionChanged="JobFilter_SelectionChanged">
                        <ComboBoxItem Content="All"  />
                        <ComboBoxItem Content="Unassigned" Padding="5,0,5,0" />
                    </ComboBox>
                </WrapPanel>
                <ListBox x:Name="jobList" Height="200" Width="300"></ListBox>
                <WrapPanel HorizontalAlignment="Left" >
                    <Button Click="Button_Click" Content="Add" Height="30" Width="75" Margin="50,0,0,0"></Button>
                    <Button Click="Remove_Job" Content="Remove" Height="30" Width="75"></Button>
                    <Button Content="Edit" Height="30" Width="75" Margin="75,0,0,0" IsEnabled="False"></Button>
                </WrapPanel>
                
            </StackPanel>
        </Grid>
        <WrapPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center">
            <Button Click="Complete_Click"  Content="Complete"  Height="30" Width="75"/>
        </WrapPanel>
    </Grid>
</Window>
